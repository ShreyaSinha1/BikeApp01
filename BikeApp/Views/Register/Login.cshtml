@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <form as-route-returnurl="@Model.ReturnUrl" method="post">
            <h4>Create new Account</h4>
            
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label asp-for="Input.Email">Input.Email</label>
                    <label asp-for="Input.Email">Input.Email</label>

                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Input.Password</label>
                    <label asp-for="Input.Password">Input.Password</label>

                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Input.ConfirmPassword</label>
                    <label asp-for="Input.ConfirmPassword">Input.ConfirmPassword</label>

                </div>
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </form>
    </div>
</div>